<article id="genre" class="genre">
  <header>
    <h1><%= @genre.name %></h1>
  </header>

  <% if @movies.any? %>
    <h3>Movies</h3>
    <ul>
      <% @movies.each do |movie| %>
      <li>
        <%= link_to movie.title ,movie %>
      </li>
      <% end %>
    </ul>
  <% else %>
    <p>There are no movies in this Genre!</p>
  <% end %>
  <footer>
    <nav>
      <% if current_user_admin? %>
      <%= link_to 'Edit', edit_genre_path(@genre), class: 'button' %>
      <%= link_to 'Delete', @genre,
      class: 'button',
        method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      </nav>
    </footer>
 </article>


